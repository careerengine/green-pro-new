@model GreenPro.WebClient.ViewModel.UserTip
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">Terms & Conditions</h4>
</div>
@using (Html.BeginForm("DeleteTip", "Website"))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @{
    //int id = Convert.ToInt32(ViewBag.ID);
    
    @Html.HiddenFor(model => model.UserPackageId)
}

            <div class="form-group">
                @Html.Label("Tip Amount", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TIPAMOUNT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TIPAMOUNT, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <span id="progress" class="text-center" style="display: none;">
            <img src="~/Content/images/loading.gif" alt="waitIcon" />
            Wait..
        </span>

        <input class="btn btn-primary" type="submit" value="Add" />
        <button class="btn btn-warning" data-dismiss="modal">Close</button>
    </div>
}