@model IEnumerable<GreenPro.WebClient.ViewModel.PackageViewModel>

@{
Layout = null;
}
@if (Model.Count() > 0)
{
    <div class="line-pricing-table">

        @foreach (var item in Model)
        {
            int showCount = 0;
            int maxCount = 10;
            
            <div class="pricing-table-wrap" data-scrollreveal="enter top over 0.5s after 0.3s">
                <ul>
                    <li class="line-head-row">
                        @item.Package_Name
                    </li>
                    <li class="line-price-row">
                        <p>
                            <span class="symbol">$</span>
                            <span>@(String.Format("{0:0.00}", item.Package_Price))</span>
                        </p>
                        @*<small>Ideal for beginners</small>*@
                    </li>
                    
                    @foreach (var service in item.Services)
                    {
                        showCount = showCount + 1;
                        <li>
                            @service.ServiceName
                        </li>
                    }

                    @for (int i = 1; i <= (maxCount - showCount); i++)
                    {
                        <li>
                            &nbsp;
                        </li>
                    }

                    
                    
                    <li class="line-btn-row">
                        <a href="" class="line-btn light">Get Started</a>
                    </li>
                </ul>
            </div>
        }
       
       
    </div>
}