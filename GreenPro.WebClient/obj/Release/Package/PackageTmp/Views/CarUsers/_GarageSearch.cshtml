@model GreenPro.WebClient.ViewModel.CarGarageUserViewModel
@using GridMvc.Html

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Garage Search</h3>
</div>
@using (Ajax.BeginForm("GetJsonData", "Garages",
            new AjaxOptions { HttpMethod = "get", InsertionMode = InsertionMode.Replace, LoadingElementId = "loading", LoadingElementDuration = 10,
                UpdateTargetId = "garageList", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }))
{

    <div class="modal-body">
        <div class="editor-field">
            <input type="text" id="searchText" name="searchText" required placeholder="Name, City, State or Zip" class="form-control" />
            <button class="btn btn-primary" id="submit" type="submit"><i class="fa fa-search"></i> </button>

            <div id="garageList">

                @Html.Partial("_SearchAddress", Model)

            </div>
        </div>
    </div>
}
<div class="modal-footer">
    @*<button class="btn btn-inverse" type="submit">Save</button>*@
</div>



