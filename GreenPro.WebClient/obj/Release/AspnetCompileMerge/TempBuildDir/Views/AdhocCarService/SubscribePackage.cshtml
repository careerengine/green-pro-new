                                    <p>@Html.RadioButtonFor(m => m.SelectedCar, item.CarId, new { @checked = true }) @item.DisplayName</p>;
                                }
                                else
                                {
                                    <p>@Html.RadioButtonFor(m => m.SelectedCar, item.CarId) @item.DisplayName</p>;
                                }
                                @*if (t.CarId == ViewBag.LatestCar)
                                {

                                    <p>   <input type="radio" name="radioselectedcar" checked value="@t.CarId" />@t.DisplayName</p>
                                }
                                else
                                {
                                    <p> <input type="radio" name="radioselectedcar" value="@t.CarId" />@t.DisplayName</p>
                                }*@

                            }

                            @Html.ValidationMessageFor(m => m.SelectedCar)
                        </div>
                        <div class="col-md-6">
                            <ul>
