
@{
    ViewBag.Title = "Service";
    
}

<div class="full-width-container inner-container">
    <div class="srvc-banner">
        <img src="~/Content/images/service-banner.jpg" alt="" width="100%">
    </div>
    <div class="srvc-container">
        <p class="select-text">SELECT YOUR</p>
        <div class="srvc-hdng"><p class="srvc-pkg-text">PACKAGE TYPE</p></div>

        <div class="servc-tab-holder">

            <ul id="myTab" class="nav-tabs">
                <li class="active"><a href="#basic" data-toggle="tab"><img src="~/Content/images/srvctab-img1.png"></a></li>
                <li><a href="#silver" data-toggle="tab"><img src="~/Content/images/srvctab-img2.png"></a></li>
                <li><a href="#plus" data-toggle="tab" class="dropdown-toggle"><img src="~/Content/images/srvctab-img3.png"></a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade in active" id="basic">
                    <p class="tab-hdng"><span class="wash-text">Basic Wash</span> with Nano Technology</p>
                    <p class="tab-price"><span class="strt-price">Starting From$24.99</span><br>*Fully Customizable</p>
                    <img src="~/Content/images/srvc-tab1-despic1.png" alt="" class="tab-img">
                    <ul class="tab-btn">
                        <li>@Html.ActionLink("Purchase","Index","Garages")</li>
                        @*<li><a href="">PURCHASE & CUSTOMIZE </a></li>*@
                    </ul>
                </div>
                <div class="tab-pane fade" id="silver">
                    <p class="tab-hdng"><span class="wash-text">Silver Wash</span> with Nano Technology</p>
                    <p class="tab-price"><span class="strt-price">Starting From$24.99</span><br>*Fully Customizable</p>
                    <img src="~/Content/images/srvc-tab1-despic1.png" alt="" class="tab-img">
                    <ul class="tab-btn">
                        <li>@Html.ActionLink("Purchase", "Index", "Garages")</li>
                        @*<li><a href="">PURCHASE & CUSTOMIZE </a></li>*@
                    </ul>
                </div>
                <div class="tab-pane fade" id="plus">
                    <p class="tab-hdng"><span class="wash-text">Plus Wash</span> with Nano Technology</p>
                    <p class="tab-price"><span class="strt-price">Starting From$24.99</span><br>*Fully Customizable</p>
                    <img src="~/Content/images/srvc-tab1-despic1.png" alt="" class="tab-img">
                    <ul class="tab-btn">
                        <li>@Html.ActionLink("Purchase", "Index", "Garages")</li>
                        @*<li><a href="">PURCHASE & CUSTOMIZE </a></li>*@
                    </ul>
                </div>
            </div>

        </div> <!-- service tab holder end -->


    </div>
</div>

<script>
    $(function () {
        $('#homeMenu').removeClass('current-menu-item');
        $('#garagesMenu').removeClass('current-menu-item');
        $('#aboutMenu').removeClass('current-menu-item');
        $('#contactMenu').removeClass('current-menu-item');
        $('#serviceMenu').addClass('current-menu-item');
    })
</script>